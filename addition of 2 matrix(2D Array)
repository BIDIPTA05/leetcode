#include<iostream>
using namespace std;
int main(){

//initialising

    int a[2][2] = {1, 2, 3, 4};
    int b[2][2] = {5, 7, 8, 9};
    int ans[2][2];
    
    //adding of the matrics
    
    for (int i = 0; i < 2;i++){
        for (int j = 0; j < 2;j++){
            ans[i][j] = a[i][j] + b[i][j];
        }   
    }
    
    //printing the matrics
    
    for (int i = 0; i < 2;i++){
        for (int j = 0; j < 2;j++){
           cout<< ans[i][j]<<" ";
        }
        cout << endl;
    }
    
    
        return 0;
}
